                @Html.SmartLabelFor(model => model.MaximumImageSize)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.MaximumImageSize, null, new { postfix = T("Common.Pixel").Text })
                @Html.ValidationMessageFor(model => model.MaximumImageSize)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.MaxUploadFileSize)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.MaxUploadFileSize, null, new { postfix = "KB" })
                @Html.ValidationMessageFor(model => model.MaxUploadFileSize)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.MakeFilesTransientWhenOrphaned)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.MakeFilesTransientWhenOrphaned)
                @Html.ValidationMessageFor(model => model.MakeFilesTransientWhenOrphaned)
            </td>
        </tr>
		<tr>
			<td colspan="2">
				<div class="admin-config-group">
					<div class="title">
						@T("Admin.Configuration.Settings.Media.MediaTypes")
					</div>
                    <div class="text-muted">
                        @T("Admin.Configuration.Settings.Media.MediaTypesNotes")
                    </div>
				</div>
