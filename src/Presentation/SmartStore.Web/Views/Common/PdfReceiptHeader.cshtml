@model PdfReceiptHeaderFooterModel
@using SmartStore.Web.Framework.Pdf;
@{
    Layout = ViewBag.IsPartial == true ? "" : "_Print";

	var imageUrl = Url.Media(Model.LogoId, 0, null, false);
}

<header>	
    @{ Html.RenderWidget("invoice_header_before"); }

	<table style="height: 100px;">
		<tr>
			<td style="width: 50%; text-align: left; vertical-align: middle">
				@if (imageUrl.HasValue())
                {
					<img src="@imageUrl" alt="" style="max-height: 100px" />
                }
                else
                {
					<h2>@Model.StoreName</h2>
                }
			</td>
			<td style="width: 50%; text-align: right;">
				@Html.Widget("invoice_header_right")
			</td>
		</tr>
	</table>
	
    @{ Html.RenderWidget("invoice_header_after"); }
</header>

