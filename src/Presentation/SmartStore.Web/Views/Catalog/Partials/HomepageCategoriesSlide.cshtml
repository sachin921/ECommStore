@model IList<CategorySummaryModel>

@using SmartStore.Web.Models.Catalog;

@{
    if (Model.Count == 0)
    {
        return;
    }
}

@*<script src="~/Content/vendors/slider/skdslider.min.js"></script>
<link href="~/Content/vendors/slider/skdslider.css" rel="stylesheet" />*@
<link href="~/Content/vendors/slider/square1.min.css" rel="stylesheet" />
<script src="~/Content/vendors/slider/square1.min.js"></script>
<style>
    h1, h2 {
        text-align: center;
    }

    [class*="slideshow"] {
        height: 450px;
        margin: 0 auto 40px;
        outline: none;
    }

        [class*="slideshow"] img {
            display: none;
        }

    .image_wrapper .text_content {
        position: absolute;
        bottom: 50px;
        left: 50px;
        color: #fff;
        text-shadow: 0 0 3px rgba(0,0,0,.5);
        opacity: 1;
    }

    .text_content * {
        margin: .1em 0;
    }
</style>
<div class="artlist-12-cols">
    <div class="container">
        <div class="slideshow example-1">
            @foreach (var item in Model)
            {
                var picture = item.PictureModel;
            <a href="@item.Url">
                <div>

                    <img src="@picture.ImageUrl" alt="@picture.AlternateText" loading="lazy" />
                </div>
            </a>
                <!--Slider Description example-->
            }
        </div>
        </div>

</div>
<script type="text/javascript">
   
    $('.example-1').square1({caption: 'none',
        theme: 'light'});
</script>

